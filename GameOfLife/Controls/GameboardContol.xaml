<UserControl x:Class="GameOfLife.Controls.GameboardContol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfLife.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="780" Name="GoLGameboard">
	<UserControl.Resources>
		<ResourceDictionary Source="Styles.xaml" />
	</UserControl.Resources>
    <UniformGrid x:Name="GameGrid" Rows="{Binding ElementName=GoLGameboard, Path=Rows}" Columns="{Binding ElementName=GoLGameboard, Path=Columns}" Style="{StaticResource GameboardControlStyle}"/>
</UserControl>
